@model IEnumerable<TestMvcAdminApp.Models.UserDetailsWithRoles>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<table class="table table-responsive table-bordered table-striped">
    <thead>
        <tr>
            <th width="200px">
                Name
            </th>
            <th width="150px">
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th width="180px">
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th width="40%">
                Role(s)
            </th>
            <th width="200px">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @if (item.Roles.First().ID <= 0) {
                        <text><i>No roles</i></text>
                    } else {
                        @String.Join(", ", item.Roles.Select(role => role.Name).ToArray())
                    }
                </td>
                <td>
                    @Html.ActionLink("Assign Roles", "EditRolesOfUser", "UserDetails", new { userID = item.ID }, new { @class = "btn btn-primary btn-block" })
                </td>
            </tr>
        }
    </tbody>
</table>


