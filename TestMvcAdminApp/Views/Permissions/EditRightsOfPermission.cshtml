@model TestMvcAdminApp.Models.RightsForPermissionDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Assign Permissions";
}

<h2>Assign Rights to @Model.PermissionName Permission</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-12">
            @using (Html.BeginForm("EditRightsOfPermission", "Permissions", FormMethod.Post)) {
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                @Html.DisplayNameFor(model => model.RightsWithIsAssigned.First().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RightsWithIsAssigned.First().Description)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.RightsWithIsAssigned.Count; i++) {
                            @if (Model.RightsWithIsAssigned[i].IsAssigned) {
                                <tr class="clickable blueTr">
                                    @Html.HiddenFor(m => Model.RightsWithIsAssigned[i].ID)
                                    <td>@Html.CheckBoxFor(m => Model.RightsWithIsAssigned[i].IsAssigned)</td>
                                    <td>@Html.DisplayFor(m => Model.RightsWithIsAssigned[i].Name)</td>
                                    <td>@Html.DisplayFor(m => Model.RightsWithIsAssigned[i].Description)</td>
                                </tr>
                            } else {
                                <tr class="clickable">
                                    @Html.HiddenFor(m => Model.RightsWithIsAssigned[i].ID)
                                    <td>@Html.CheckBoxFor(m => Model.RightsWithIsAssigned[i].IsAssigned)</td>
                                    <td>@Html.DisplayFor(m => Model.RightsWithIsAssigned[i].Name)</td>
                                    <td>@Html.DisplayFor(m => Model.RightsWithIsAssigned[i].Description)</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Update</button>
                </div>
            }
        </div>
    </div>

</div>
<div>
    <a href="@Url.Action("Index")">Back to List</a>
</div>


