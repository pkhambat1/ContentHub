@model IEnumerable<TestMvcAdminApp.Models.PermissionWithRights>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Permissions";
}

<h2>Permissions</h2>
<table class="table table-responsive table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th style="width: 50%">
                Right(s)
            </th>
            <th style="width: 200px">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (item.Rights.First().ID <= 0) {
                        <text><i>No rights</i></text>
                    } else {
                        @String.Join(", ", item.Rights.Select(right => right.Name).ToArray())
                    }
                </td>
                <td>
                    @Html.ActionLink("Assign Rights", "EditRightsOfPermission", "Permissions", new { permissionID = item.ID }, new { @class = "btn btn-info" })
                    <button class="btn btn-danger deletePermission text-center" id="confirmDelete" data-target="#deleteModal" data-id="@item.ID" data-count="@item.RolesCount" data-toggle="modal">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("CreatePermission")" class="btn btn-primary">Create New</a>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel"><b>Confirmation</b></h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody"></div>
            <div class="modal-footer" id="confirmFooter">
                <button type="button" id="deletePermission" class="btn btn-danger" data-dismiss="modal">Yes</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
            </div>
            <div class="modal-footer" id="informFooter">
                <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Permissions/Index.js"></script>
