@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestMvcAdminApp</title>

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">TestMvcAdminApp</a>
            </div>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav navbar-left mr-auto">
                    <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Admin
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="UserDetails" asp-action="Index">User Details</a></li>
                            <li><a asp-controller="Roles" asp-action="Index">Roles</a></li>
                            <li><a asp-controller="Permissions" asp-action="Index">Permissions</a></li>
                        </ul>
                    </li>
                </ul>
                @if (SignInManager.IsSignedIn(User)) {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown nav-item">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                @User.Identity.Name: @User.FindFirst(claim => claim.Type == System.Security.Claims.ClaimTypes.Role)?.Value
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                } else {
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a asp-action="Register" asp-controller="Account">Register</a>
                        </li>
                        <li>
                            <a asp-action="Login" asp-controller="Account">Login</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year.ToString() - TestMvcAdminApp</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
